<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="idn_kabupaten_kota_list">
      <field name="name">kabupaten-kota list</field>
      <field name="model">idn.kabupaten_kota</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="id_kabupaten_kota" optional="hide"/>
          <field name="provinsi_id" optional="show"/>
        </tree>
      </field>
    </record>

    <!-- explicit list form definition -->

    <record model="ir.ui.view" id="idn_kabupaten_kota_form">
      <field name="name">kabupaten-kota form</field>
      <field name="model">idn.kabupaten_kota</field>
      <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                  <field name="name"/>
                  <field name="id_kabupaten_kota"/>
                  <field name="provinsi_id"/>
                </group>
            </sheet>
        </form>
      </field>
    </record>

    <!-- explicit search view definition -->

    <record model="ir.ui.view" id="idn_kabupaten_kota_search">
      <field name="name">kabupaten-kota search</field>
      <field name="model">idn.kabupaten_kota</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="id_kabupaten_kota" optional="hide"/>
          <field name="provinsi_id" optional="show"/>
        </search>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="idn_kabupaten_kota_action_window">
      <field name="name">kabupaten-kota window</field>
      <field name="res_model">idn.kabupaten_kota</field>
      <field name="view_mode">tree,form</field>
    </record>


