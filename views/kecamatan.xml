<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="idn_kecamatan_list">
      <field name="name">kecamatan list</field>
      <field name="model">idn.kecamatan</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="id_kecamatan" optional="hide"/>
          <field name="kabupaten_kota_id" optional="show"/>
          <field name="provinsi_id" optional="show"/>
        </tree>
      </field>
    </record>

    <!-- explicit form view definition -->

    <record model="ir.ui.view" id="idn_kecamatan_form">
      <field name="name">kecamatan form</field>
      <field name="model">idn.kecamatan</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="id_kecamatan"/>
              <field name="kabupaten_kota_id"/>
              <field name="provinsi_id"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- explicit search view definition -->

    <record model="ir.ui.view" id="idn_kecamatan_search">
      <field name="name">kecamatan search</field>
      <field name="model">idn.kecamatan</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="id_kecamatan"/>
          <field name="kabupaten_kota_id"/>
          <field name="provinsi_id"/>
        </search>
      </field>
    </record>

<!-- 

    name = fields.Char(string="kecamatan")
    id_kecamatan = fields.Integer(string="id kecamatan")
    kabupaten_kota_id = fields.Many2one('idn.kabupaten_kota', string="kabupaten-kota")
    provinsi_id = fields.Many2one('idn.provinsi', string="provinsi", compute="_compute_provinsi", store=True)
 -->

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="idn_kecamatan_action_window">
      <field name="name">kecamatan window</field>
      <field name="res_model">idn.kecamatan</field>
      <field name="view_mode">tree,form</field>
    </record>


